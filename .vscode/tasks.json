{
	"version": "2.0.0",
	"tasks": [

		{//生成可执行文件.a.exe
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "D:\\Dev\\MinGW64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++11", //c++11标准
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}\\.exe\\a.exe", //将可执行文件命名为a.exe
				"-leasyx", //加入easyx.h
				"-lwinmm", //加入winmm多媒体函数库
			],
			"options": {
				"cwd": "D:\\Dev\\MinGW64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: D:\\Dev\\MinGW64\\bin\\g++.exe"
		}		
	]
}